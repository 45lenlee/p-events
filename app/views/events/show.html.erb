<h1><%= @event.creator.name %></h1>
<h1><%= @event.title %></h1>
<p><%= @event.description %></p>
<p><%= @event.location %></p>
<p><%= @event.date %></p>

<% if @event.attendees.any? %>
  <% @event.attendees.each do |attendee| %>
  <span class="attendee">
    <%= attendee.name %>
  </span><br>
  <% end %>
<% else %>
  <p>No attendees</p>
<% end %>
