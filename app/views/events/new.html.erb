<%= form_for(@event) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
    <%= f.label :location %>
    <%= f.text_field :description, class: 'form-control' %>
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control' %>
    <%= f.submit 'Event', class: 'btn btn-primary' %>
  </div>
<% end %>
